{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "C:\\mingw-w64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "start cmd /k \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Build & Run C++",
            "dependsOn": ["Build C++", "Run Program"],
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}
